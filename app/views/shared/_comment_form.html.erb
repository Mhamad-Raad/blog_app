<%= form_with url: user_post_comments_path(user_id: @current_user.id, post_id: @post.id), model: Comment do |form| %>
  <%= form.hidden_field :post_id, value: @post.id %>
  <div class='flex-column'>
    <%= form.text_field :text, placeholder: "Comment something" %>
  </div>
    <%= form.submit "Add comment" %>
<% end %>